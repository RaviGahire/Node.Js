<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie List Table</title>
  <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-50 p-6 md:p-12">

  <div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-6">
     
      <div class="flex flex-col gap-2">
         <h2 class="text-2xl font-bold text-gray-800">Movie Database</h2>
              <span class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full text-sm font-medium"><span class="text-red-700 font-bold"><%- data.length %></span> Movies Found</span>

      </div>
 <div>
       <a href="/"
       class="px-4 py-2 bg-green-800 text-white rounded-md"
       >Add Movie</a>
 </div>
    </div>

    <div class="overflow-hidden bg-white shadow-sm border border-gray-200 rounded-xl">
      <table id="movieTable" name="movieTable" class="w-full text-left border-collapse">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="px-6 py-4 text-sm font-semibold text-gray-700">Poster</th>
            <th class="px-6 py-4 text-sm font-semibold text-gray-700">Movie Title & Director</th>
            <th class="px-6 py-4 text-sm font-semibold text-gray-700">Release Date</th>
            <th class="px-6 py-4 text-sm font-semibold text-gray-700">Genre</th>
            <th class="px-6 py-4 text-sm font-semibold text-gray-700">Status</th>
            <th class="px-6 py-4 text-sm font-semibold text-gray-700">Rating</th>
            <th class="px-6 py-4 text-sm font-semibold text-gray-700 text-right">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          
      

          <% data.map((val,indx)=>{ %>
    <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4">
              <div class="w-12 h-16 bg-gray-200 rounded-md overflow-hidden flex items-center justify-center border border-gray-100">
                <span class="text-[10px] text-gray-400 font-bold uppercase">Poster</span>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="font-bold text-gray-900"><%-val.movieTitle %></div>
              <div class="text-xs text-gray-500"><%-val.director %></div>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600"><%-val.releaseDate %></td>
            <td class="px-6 py-4 text-sm text-gray-600"><%-val.genre %></td>
            <td class="px-6 py-4">
              <span class="px-2.5 py-0.5 rounded-full text-xs font-bold bg-green-100 text-green-700"><%-val.boxOfficeStatus %></span>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center gap-1">
                <span class="text-sm font-bold text-gray-700"><%- val.rating %></span>
                <span class="text-yellow-400 text-xs">â˜…</span>
              </div>
            </td>
            <td class="px-1 py-4 text-center">
            <div class="flex justify-end items-center gap-2">
                <a href="/edit/<%-val._id%>" class="text-indigo-600 hover:text-indigo-900 font-medium text-sm cursor-pointer bg-gray-200 px-4 py-2 rounded-md">Edit</a>
              <br>
              <a href="/delete/<%-val._id%>" class="text-indigo-600 hover:text-indigo-900 font-medium text-sm cursor-pointer bg-gray-200 px-4 py-2 rounded-md">Delete</a>
            </div>

            </td>
          </tr>


         <% }) %>

     

        </tbody>
      </table>
    </div>
  </div>

</body>
</html>