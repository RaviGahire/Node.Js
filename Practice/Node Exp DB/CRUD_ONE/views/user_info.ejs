<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Data Table</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 p-8">

    <div class="max-w-6xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center bg-white">
                <h2 class="text-xl font-bold text-gray-800">Registered Users</h2>
                <div class="flex space-x-2">
                    <input type="text" placeholder="Search users..."
                        class="px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-indigo-500 focus:border-indigo-500">
                    <a href="/"
                        class="bg-indigo-600 text-white px-4 py-2 rounded-md text-sm hover:bg-indigo-700 transition">Add
                        User</a>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead class="bg-gray-50 uppercase text-xs font-semibold text-gray-600">
                        <tr>
                            <th class="px-6 py-4">User</th>
                            <th class="px-6 py-4">Contact & Demographics</th>
                            <th class="px-6 py-4">Address</th>
                            <th class="px-6 py-4">Biography</th>
                            <th class="px-6 py-4 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% data.map((val,index)=> { %>
                            <tr class="hover:bg-gray-50 transition-colors cursor-pointer">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div
                                            class="h-10 w-10 flex-shrink-0 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-700 font-bold">
                                            <%= val.first_name.charAt(0) %>
                                                <%= val.last_name.charAt(0) %>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">
                                                <%= val.first_name %>
                                                    <%= val.last_name %>
                                            </div>
                                            <div class="text-sm text-gray-500 uppercase">
                                                <%= val.gender %> <span class="text-red-400">DOB</span>
                                                    <%= val.birth_date %>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                <td class="px-6 py-4 text-sm text-gray-600">
                                    <div>
                                        <%= val.user_email %>
                                    </div>
                                    <div class="text-gray-400">
                                        <%= val.phone_number %>
                                    </div>
                                </td>

                                <td class="px-6 py-4 text-sm text-gray-600">
                                    <div>
                                        <%= val.street_address %>, <%= val.city %>
                                    </div>
                                    <div class="text-xs text-gray-400">
                                        <%= val.state %>, <%= val.zip_code %>
                                    </div>
                                </td>

                                <td class="px-6 py-4 text-sm text-gray-500 italic max-w-xs truncate">
                                    <%= val.user_bio %>
                                </td>

                                <td class="px-6 py-4 text-right text-sm font-medium">
                                    <a href="/edit/<%= val._id %>"
                                        class="text-indigo-600 hover:text-indigo-900 mr-3">
                                        Edit
                                    </a>
                                    <a href="/users/delete/<%= val._id %>" class="text-red-600 hover:text-red-900">
                                        Delete
                                    </a>
                                </td>
                            </tr>



                            <%})%>
                                <%if( data.length == 0){%>

                                    
                                        <td class="text-2xl text-red-400 text-center bg-gray-100 font-semibold uppercase" colspan="6"> <span>No user found</span></td>
                                    




                                    <%}%>


                    </tbody>
                </table>
            </div>

            <div
                class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-between text-xs text-gray-500 uppercase font-semibold">
                <span>Showing 2 users</span>
                <div class="flex space-x-1">
                    <button class="px-2 py-1 border border-gray-300 rounded bg-white hover:bg-gray-100">Prev</button>
                    <button class="px-2 py-1 border border-gray-300 rounded bg-white hover:bg-gray-100">Next</button>
                </div>
            </div>
        </div>
    </div>

</body>

</html>